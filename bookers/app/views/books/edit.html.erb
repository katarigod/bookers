<body>
  <h1>Editing Book</h1>
  <% if @book.errors.any? %>
    <div class="error_explanation">
      <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= form_with model: @book, url: "/books/#{@book.id}", method: :patch do |f| %>
    <div class="edit">
      <div>
        <%= f.label :title, 'Title', :class =>"book_title" %>
      </div>
      <div>
        <%= f.text_field :title %>
      </div>
    </div>
    
    <div class="edit">
      <div>
        <%= f.label :body, 'Body', :class =>"book_body" %>
      </div>
      <div>
        <%= f.text_area :body %>
      </div>
    </div>
    <div class="edit">
      <%= f.submit 'Update Book' %>
    </div>
  <% end %>
  <%= link_to "Show", "/books/#{@book.id}" %>
  <span> | </span>
  <%= link_to "Back", '/books' %>
 
</body>
