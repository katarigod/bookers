<body>
  <h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
      </tr>
    
      <%= @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </thead>
  </table>
  <h2>New book</h2>
  <%= form_with model: @book do |f| %>
    <div class="field">
      <h4 class="new">Title</h4>
      <%= f.text_field :title %>
    </div>
	  <div class="field">
      <h4 class="new">Body</h4>
      <%= f.text_area :body %>
    </div
	
  <%= f.submit 'Create Book' %>
<% end %>
</body>