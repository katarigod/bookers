<body>
  <h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
      </tr>
    
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </thead>
  </table>
  <h2>New book</h2>
  <% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  
  <%= form_with model: @book, url: '/books', method: :post do |f| %>
    <div class="field">
      <p class="new">Title</p>
      <%= f.text_field :title %>
    </div>
	  <div class="field">
      <p class="new">Body</p>
      <%= f.text_area :body %>
    </div>
    <%= f.submit 'Create Book', :class=>"input" %>
  <% end %>
</body>